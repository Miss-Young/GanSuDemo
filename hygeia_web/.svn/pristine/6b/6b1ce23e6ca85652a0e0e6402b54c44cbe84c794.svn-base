@charset "UTF-8";
/*欢迎页*/

/*全局*/
body{overflow-x:hidden;}
a:hover, a:focus{text-decoration:none !important;}

/*快捷方式*/
.layadmin-shortcut li{text-align:center;}
.layadmin-shortcut li cite{top:0; background-color: #f8f8f8;font-size: 13px;font-weight: 400;}
.layadmin-shortcut li:hover cite{background-color: #f2f2f2;color: #888;}

.layadmin-shortcut .btn {position: absolute; top: 5px; right: 5px; font-size: 16px;background-color: transparent; display: none;color: #666;}
.layadmin-shortcut .btn:hover, .layadmin-shortcut .btn:active{color: #d02f12; background-color: transparent; }
.layadmin-shortcut li:hover .btn{display: block;}
.layui-card-header .layui-icon {right: 15px; top: 14px; margin-top: 0;}
.layui-card-header .fa{position: absolute; right: 15px; top: 14px; color: #666;}

/*待办事项*/
.layadmin-backlog .layadmin-backlog-body{padding:15px 15px;}
.layadmin-backlog-body p,.layadmin-backlog-body h3{text-align:center;margin:0 auto;font-size: 13px;font-weight: 400;}

/*数据概览*/

/*公告列表*/
#LAY-index-bulletin {height: 185px; overflow-y: auto; margin-bottom: 0; border: 0; font-size: 14px;}
#LAY-index-bulletin .list-group-item{border: 0 !important;}
#LAY-index-bulletin .title {color: #666;}
#LAY-index-bulletin .today .title{color: #d02f12;}
#LAY-index-bulletin .new .title{color: #ff5722;}
#LAY-index-bulletin .recent .title{color: #2cb4bf;}
#LAY-index-bulletin .dot{border-radius:500px; margin-right: 10px; background-color: #666; color: #fff;}
#LAY-index-bulletin .today .dot{background-color: #d02f12;}
#LAY-index-bulletin .new .dot{background-color: #ff5722;}
#LAY-index-bulletin .recent .dot{background-color: #2cb4bf;}
#LAY-index-bulletin .date {font-size: 12px; color: #999; float: right;}

/*日历显示*/	
.calendar-main {-webkit-box-sizing: content-box;-moz-box-sizing: content-box;box-sizing: content-box;padding: 0;box-shadow:none;border-radius:0;border:0;background:none;}
.calendar-header {padding: 0 10px;}
.calendar-quick .calendar-quick-contents a { padding: 10px 0; font-size: 16px; font-weight: 600; color: #333;}
.calendar-body-wapper { padding-bottom: 5px;}
.calendar-body { vertical-align: top;}
.calendar-body li {line-height:140%; vertical-align:top; color:#000; font-size:16px; position: relative; z-index: 1;}
.calendar-body li div {overflow: hidden;}
.calendar-body li.weeks{height:22px; font-size:14px; font-weight:normal}
.calendar-body li div span{font-size:12px; color:#ccc}
.calendar-body li div span.hover{color:#2CB4BF}
.calendar-body li.selected div span{color:#fff}
.calendar-body li.current div span{color:#2CB4BF}

.calendar-header .select-box li{font-size:18px;font-weight:400;}
.calendar-header .select-box li.area-left{ border-right: 10px solid #aaa;margin-right:5px;}
.calendar-header .select-box li.area-right{border-left: 10px solid #aaa;margin-left:5px;}
.calendar-quick {background-color:transparent;margin-left:0;z-index: 100;}

.calendar-body li div span.number{font-size:18px; font-weight:700;color:#000;}
.calendar-body li.disabled div span.number{color: #ddd;}
.calendar-body li.sunday div span.number{color: #d02f12;}
.calendar-body li div span.hover{color:#2cb4bf;}
.calendar-body li.selected div span{color:#fff !important;}
		
.calendar-sign{position:absolute;left:2px;top:2px;display:block;width:16px;height:16px;line-height:1.5;text-align:center;overflow:hidden;font-size:12px !important;}
.calendar-sign.rest{color:blue;background:transparent;font-weight:bold;}
.calendar-sign.worker{color:blue;background:transparent;font-weight:bold;}
.calendar-sign.absent{color:#fff;background:#d4181d;}
.calendar-sign.holi{color:#fff;background:green;}